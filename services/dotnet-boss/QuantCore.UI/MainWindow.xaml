<Window x:Class="QuantCore.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:scott="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
        mc:Ignorable="d"
        Title="QuantCore Terminal (The Boss)" Height="720" Width="1280"
        Background="#1e1e1e" Foreground="White">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Background="#252526" Margin="5">
            <Label Content="INSTRUMENT" Foreground="Gray" FontWeight="Bold"/>
            <TextBox x:Name="TickerInput" Text="SELG" Margin="5" Padding="5" FontSize="16" Background="#333" Foreground="White" BorderThickness="0"/>
            
            <Button Content="LOAD DATA (SQL)" Click="LoadData_Click" Margin="5" Padding="10" Background="#007acc" Foreground="White" BorderThickness="0"/>
            <Button Content="ANALYZE (PYTHON AI)" Click="Analyze_Click" Margin="5" Padding="10" Background="#ca5010" Foreground="White" BorderThickness="0"/>

            <Label Content="AI PREDICTION" Foreground="Gray" FontWeight="Bold" Margin="0,20,0,0"/>
            <TextBlock x:Name="AiResultText" Text="Waiting..." Foreground="Cyan" FontSize="14" Margin="10" TextWrapping="Wrap"/>
        </StackPanel>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="200"/>
            </Grid.RowDefinitions>

            <scott:WpfPlot x:Name="MainChart" Grid.Row="0"/>
            
            <scott:WpfPlot x:Name="IndicatorChart" Grid.Row="1" Margin="0,5,0,0"/>
        </Grid>
    </Grid>
</Window>